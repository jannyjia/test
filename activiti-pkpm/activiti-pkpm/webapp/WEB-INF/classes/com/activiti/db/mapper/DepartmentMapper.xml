<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
<mapper namespace="com.pkpm.bpm.identity.Department">
  <!-- GROUP RESULTMAP -->

  <resultMap id="groupResultMap" type="com.pkpm.bpm.identity.Department">
    <id property="id" column="ID_" jdbcType="VARCHAR" />
    <result property="revision" column="REV_" jdbcType="INTEGER" />
    <result property="name" column="NAME_" jdbcType="VARCHAR" />
    <result property="type" column="TYPE_" jdbcType="VARCHAR" />
  </resultMap>
  
  <!-- GROUP SELECT -->
  <select id="selectList" resultMap="groupResultMap">
    select g.*
    from V_ACT_ID_DEPARTMENT g
  </select>
  <select id="selectGroup" parameterType="string" resultMap="groupResultMap">
    select * from V_ACT_ID_DEPARTMENT where ID_ = #{id, jdbcType=VARCHAR}
  </select>
    
  <select id="selectViewGroupsByUserId" parameterType="org.activiti.engine.impl.db.ListQueryParameterObject" resultMap="groupResultMap">
    select g.*
    from V_ACT_ID_DEPARTMENT g, V_ACT_ID_DEPARTMENT_RELATION membership
    where g.ID_ = membership.GROUP_ID_
      and membership.USER_ID_ = #{parameter}
  </select>

  <select id="selectViewGroupsByUserIdAndGroupType" parameterType="org.activiti.engine.impl.db.ListQueryParameterObject" resultMap="groupResultMap">
    select g.*
    from V_ACT_ID_DEPARTMENT g, V_ACT_ID_DEPARTMENT_RELATION membership
    where g.ID_ = membership.GROUP_ID_
      and membership.USER_ID_ = #{parameter.userId}
      <if test="groupType != null">
         and g.TYPE_ = #{parameter.groupType}
      </if>
  </select>
  
  <select id="selectViewGroupByQueryCriteria" parameterType="org.activiti.engine.impl.GroupQueryImpl" resultMap="groupResultMap">
  	${limitBefore}
    select RES.* ${limitBetween}
    <include refid="selectViewGroupByQueryCriteriaSql" />
    ${orderBy}
    ${limitAfter}
  </select>
  
   <select id="selectViewGroupCountByQueryCriteria" parameterType="org.activiti.engine.impl.GroupQueryImpl" resultType="long">
    select count(RES.ID_)
    <include refid="selectViewGroupByQueryCriteriaSql" />
  </select>
  
  <sql id="selectViewGroupByQueryCriteriaSql">
    from V_ACT_ID_DEPARTMENT RES
    <if test="userId != null">
      inner join V_ACT_ID_DEPARTMENT_RELATION M on RES.ID_ = M.GROUP_ID_
      inner join V_ACT_ID_USER U on M.USER_ID_ = U.ID_
    </if>
    <where>
      <if test="id != null">
        RES.ID_ = #{id}
      </if>
      <if test="name != null">
        and RES.NAME_ = #{name}
      </if>
      <if test="nameLike != null">
        and RES.NAME_ like #{nameLike}${wildcardEscapeClause}
      </if>
      <if test="type != null">
        and RES.TYPE_ = #{type}
      </if>
      <if test="userId != null">
        and U.ID_ = #{userId}
      </if>
      <if test="procDefId != null">
        and exists (select ID_ from ${prefix}ACT_RU_IDENTITYLINK where PROC_DEF_ID_ = #{procDefId} and GROUP_ID_=RES.ID_ )
      </if>
      
    </where>
  </sql>

  <select id="selectViewGroupCountByNativeQuery" parameterType="java.util.Map" resultType="long">
    ${sql}
  </select>
  
</mapper>